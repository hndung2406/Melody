<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Wish List</title>
        <style media="screen">
            
            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            .container {
                margin-bottom: auto;
            }

        </style>
        {{> header}}
    </head>

    <body>
        <div id="page-container">
            {{> navbar}}
            <div class="container" id="content-wrap">
                <h1 style="text-align: center; padding-top: 20px; padding-bottom: 20px">Wish List</h1>
                <div style="overflow-x:auto;">
                    <table class="table table-striped" >
                        <tr>
                            <th style="display: none">Id</th>
                            <th style="width: 20%;">Name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th style="width: 44%">Description</th>
                            <th>Operation</th>
                        </tr>
                        {{#each wishes}}
                            <tr>
                                <th style="display: none">{{_id}}</th>
                                <th><a href="{{link}}" target="_blank" style="color: black">{{name}}</a></th>
                                <th style="text-align: center"><a href="{{image}}" data-lightbox="image-1" data-title="{{name}}"><img src="{{image}}" style="width: 70px; height: 70px;" alt=""></a></th>
                                <th style="font-weight: normal">{{price}}</th>
                                <th style="font-weight: normal">{{description}}</th>
                                <th>
                                    <button class="btn btn-info" type="button" data-toggle="modal" data-target="#updateModal" style="margin-right: 10px"><i class="fas fa-pen"></i></button>
                                    <button class="btn btn-danger" type="button"  data-toggle="modal" data-target="#deleteModal"><i class="far fa-trash-alt"></i></button>
                                </th>
                            </tr>
                        {{/each}}
                    </table>
                </div>
            </div>

            <!-- Modal Update-->
            <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Update</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form class="" action="/wish/update" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="form-group">
                                    <input type="hidden" name="id" id="id">
                                </div>
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" id="text" name="text">
                                </div>
                                <div class="form-group">
                                    <label for="">Image Name</label>
                                    <input class="form-control" type="text" name="fileName" id="fileName">
                                </div>
                                <div class="form-group">
                                    <p>Image</p>
                                    <img src="" style="width:100px; height: 100px;" alt="" id="image">
                                </div>
                                <div class="form-group">
                                    <input type="file" class="form-control-file" name="photo" id="photo">
                                </div>
                                <div class="form-group">
                                    <label>Link</label>
                                    <input type="text" class="form-control" id="link" name="link">
                                </div>
                                <div class="form-group">
                                    <label>Price</label>
                                    <input type="number" class="form-control" id="price" name="price">
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <input type="text" class="form-control" id="description" name="description">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="button-save">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Modal Delete-->
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form class="" action="/wish/delete" method="post">
                            <div class="modal-body">
                                <p>Do you want to delete?</p>
                                <input type="hidden" name="idDelete" id="idDelete">
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-warning" id="button-delete">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <script src="/js/list.js"></script>
            <script src="/lightbox/js/lightbox-plus-jquery.min.js"></script>
            {{> footer}}
        </div>
    </body>

</html>
